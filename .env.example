# 数据库配置示例
# 复制此文件为 .env 并填入实际配置

# PostgreSQL数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=tikuadapter

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# 是否启用SQL日志（开发环境可以设置为true）
DB_ECHO=false

# 日志配置
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 日志保留天数
LOG_BACKUP_DAYS=30

# 认证配置
# JWT过期时间（分钟），密钥自动生成到 data/.jwt_secret
ACCESS_TOKEN_EXPIRE_MINUTES=3600

# 邮箱验证配置
EMAIL_VERIFICATION_REQUIRED=false
# 开了邮件验证才需要，阿里云邮件服务配置（使用ECS RAM Role认证）
EMAIL_FROM_ADDRESS=
EMAIL_FROM_ALIAS=
# ECS RAM Role名称（可选，不填会自动获取）
ALIBABA_CLOUD_ECS_METADATA=

# CORS配置
CORS_ORIGINS=*

RATE_LIMIT_AUTH=5/minute# 注册/登录
RATE_LIMIT_EMAIL=3/minute# 发送邮件
#RATE_LIMIT_SEARCH=  # 搜索接口，留空不限制
